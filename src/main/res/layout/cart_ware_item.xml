<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkbox_cart_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="false" />

    <ImageView
        android:id="@+id/imageView_ware_cart"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_title_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_price_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="1555.3"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.ff.pp.cniao.view.NumberAddSubView
                android:id="@+id/number_add_sub_view"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:number_text_size="6sp"
                app:number_text_color="@color/material_red"
                app:number_textview_background="#e8e8e8"
                app:add_button_background="@drawable/button_background"
                app:sub_button_background="@drawable/button_background"
 />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>