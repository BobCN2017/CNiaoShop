<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:navigationIcon="@drawable/ic_menu_back">

        <TextView
            android:id="@+id/text_toolbar_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="商品列表"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/right_btn_background"
            android:onClick="convertView"
            android:src="@drawable/icon_grid_32"
            android:layout_marginRight="10dp"
            android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>
</FrameLayout>