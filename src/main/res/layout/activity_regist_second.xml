<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ff.pp.cniao.RegisterActivityFirst">

    <com.ff.pp.cniao.view.ThreePositionToolbar
        android:id="@+id/toolbar_register_second"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways|snap" />

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/text_tips"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#dce5ef"
        android:padding="10dp"
        android:text=""
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <com.ff.pp.cniao.view.ErasableEditText
            android:id="@+id/editTextClear_verification_code"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_menu_login"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_get_code_again"
            android:layout_width="0dp"
            android:minHeight="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/send_button_background_selector"
            android:layout_weight="1.2"
            android:onClick="getVerificationCodeAgain"
            android:gravity="center"
            android:text="重新获取验证码"
            android:textSize="15sp" />


    </LinearLayout>


</LinearLayout>